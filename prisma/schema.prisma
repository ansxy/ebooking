model Airpots {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  user        User?
  flights     Flight[]

  @@schema("flights")
}

model Flight {
  id             Int      @id @default(autoincrement())
  from           String
  destination    String
  delayed_time   Int?
  deparatur_time DateTime
  arrival_time   DateTime
  price          Decimal
  flight_type    String
  airportId      Int
  airport        Airpots  @relation(fields: [airportId], references: [id])

  @@schema("flights")
}

model Hotel {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  user        User?
  rooms       Room[]

  @@schema("hotels")
}

model Room {
  id              Int    @id @default(autoincrement())
  room_number     Int
  price_per_night Int
  room_type       String
  hotelId         Int
  hotel           Hotel  @relation(fields: [hotelId], references: [id])

  @@schema("hotels")
}

model Balance {
  id     Int     @id @default(autoincrement())
  amount Decimal
  user   User?

  @@schema("balance")
}

enum Role {
  ADMIN
  PENGGUNA
  MITRA

  @@schema("user")
}
