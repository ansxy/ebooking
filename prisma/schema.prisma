model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createAt  DateTime @default(now())
  updateAt  DateTime @updatedAt
  role      Role
  airportId Int?     @unique
  airport   Airpots? @relation(fields: [airportId], references: [id], onUpdate: Cascade)
  hotelId   Int?     @unique
  hotel     Hotel?   @relation(fields: [hotelId], references: [id], onUpdate: Cascade)
  balanceId Int?     @unique
  balance   Balance? @relation(fields: [balanceId], references: [id], onDelete: Cascade)
  // accounts  Account[]
  // sessions  Session[]

  @@schema("user")
}

